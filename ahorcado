```mermaid
graph TD;
    inicio --> Asignar_palabras;
    Asignar_palabras --> palabraSecreta;
    palabraSecreta --> letrasAdivinadas;
    letrasAdivinadas --> intentosFallidos;
    intentosFallidos --> max_intentos;
    max_intentos --> Bienvenido;
    Bienvenido --> Adivina;
    Adivina --> Longitud;
    Longitud --> Mientras;
    Mientras --> letra;
    letra --> SI;
    SI --> En_palabraSecreta;
    En_palabraSecreta --> letrasAdivinadas;
    letrasAdivinadas --> EsPalabraCompleta;
    EsPalabraCompleta --> Felicidades;
    Felicidades --> FIN;
    EsPalabraCompleta --> CONTINUAR;
    CONTINUAR --> Mientras;
    SI --> Intentos;
    Intentos --> intentosFallidos;
    intentosFallidos --> Imprimir;
    Imprimir --> DibujarAhorcado;
    DibujarAhorcado --> FIN;
    Intentos --> max_intentos;
    max_intentos --> Perdiste;
    Perdiste --> FIN;
